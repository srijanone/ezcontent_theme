<div class="masonry" >
  <div class="grid__wrapper">
    {% for key,value in masonry.data %}
      <div class="grid__item {{value.setwidth}} {{value.removefloat}} " style="background-color:{{ value.Bgcolor }}" key={{loop.index}} >
        <div class="item">
          {% include "@atoms/04-images/01-image.twig" with {
            src: value.image
          } %}
          <div class="item_text--wrapper">
            {% include "@atoms/02-text/01-paragraph.twig" with {
              paragraph_content: value.title,
              class: 'title'
            } %}

            {% include "@atoms/02-text/01-paragraph.twig" with {
              paragraph_content: value.subtitle,
              class: 'subtitle'
            } %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

